# OurStore Environment Configuration Template
# Copy this to .env and fill in your actual values

# ================================
# Flask Application Settings
# ================================

# Flask environment (development, production, testing)
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=run.py

# Server configuration
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Secret key for sessions (generate a random string for production)
SECRET_KEY=your-secret-key-here

# ================================
# Database Configuration
# ================================

# PostgreSQL Database URL
DATABASE_URL=postgresql://postgres:password@localhost:5432/ourstore_db

# Individual database components (alternative to DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ourstore_db
DB_USER=postgres
DB_PASSWORD=your-db-password

# ================================
# CORS Settings
# ================================

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ================================
# Email Configuration (Optional)
# ================================

# SMTP settings for email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True

# ================================
# File Upload Settings
# ================================

# Maximum file size for uploads (in bytes)
MAX_CONTENT_LENGTH=16777216

# Upload directory
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,webp

# ================================
# Security Settings
# ================================

# JWT settings (if using JWT authentication)
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600

# Password hashing rounds
BCRYPT_LOG_ROUNDS=12

# ================================
# External Services (Optional)
# ================================

# Payment gateway (Stripe example)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret

# Cloud storage (AWS S3 example)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# ================================
# Development Settings
# ================================

# Seed data settings
SEED_DATABASE=True
SEED_ADMIN_EMAIL=admin@ourstore.com
SEED_ADMIN_PASSWORD=admin123

# Logging level
LOG_LEVEL=INFO

# ================================
# Production Settings
# ================================

# Use these in production
# FLASK_ENV=production
# FLASK_DEBUG=False
# DATABASE_URL=postgresql://user:password@prod-db-host:5432/ourstore_prod
# SECRET_KEY=a-very-long-random-secret-key-for-production