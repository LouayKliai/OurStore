# Environment Variables Template
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/ourstore_db

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=jwt-secret-string-change-in-production

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Cloudinary Configuration (Free image storage - 25GB limit)
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=cloud-name-change-in-production
CLOUDINARY_API_KEY=api-key-change-in-production
CLOUDINARY_API_SECRET=api-secret-key-change-in-production
USE_CLOUDINARY=true  # Set to false to use local storage instead

# Contact Information
CONTACT_EMAIL=support@yourstore.com
CONTACT_PHONE=+1 (555) 123-4567
CONTACT_WHATSAPP=+1 (555) 123-4567
CONTACT_ADDRESS_LINE1=123 Commerce Street
CONTACT_ADDRESS_LINE2=Business District, NY 10001
CONTACT_BUSINESS_HOURS=Monday - Friday: 9AM - 6PM EST

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# AWS S3 Configuration (optional, for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1

# Application Settings
PORT=5000
DEBUG=True